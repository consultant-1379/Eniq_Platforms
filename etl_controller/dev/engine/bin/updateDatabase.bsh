if [ ${LOGNAME} != "dcuser"  ] ; then
  echo "This script must be executed as dcuser"
  exit 1
fi

#--------------------------------------------------------------------
#Global variable
#--------------------------------------------------------------------

# directory path
CONF_DIREC=/eniq/sw/conf
BIN_DIREC=/eniq/sw/bin
SYBASE_IQ_ISQL_PATH=/eniq/sybase_iq//OCS-15_0/bin/isql


#Environment Configuration
#--------------------------------------------------------------------
RM=/usr/bin/rm
SED=/usr/bin/sed
CP=/usr/bin/cp

#--------------------------------------------------------------------
#Exporting Environment Variable
#--------------------------------------------------------------------
export RM
export SED
export CP

while [ "1" ]; do
	echo "Enter start day of the week (Monday,Tuesday,Wednesday,Thursday,Friday,Saturday,Sunday):"
	read FIRSTDAY
	case ${FIRSTDAY} in
		Monday)
		JAVAFIRSTDAY=2;
		DATABASEFIRSTDAY=1;
		break;
		;;
		Tuesday)
		JAVAFIRSTDAY=3;
		DATABASEFIRSTDAY=2;
		break;		
		;;
		Wednesday)
		JAVAFIRSTDAY=4;
		DATABASEFIRSTDAY=3;
		break;		
		;;
		Thursday)
		JAVAFIRSTDAY=5;
		DATABASEFIRSTDAY=4;
		break;		
		;;
		Friday)
		JAVAFIRSTDAY=6;
		DATABASEFIRSTDAY=5;
		break;		
		;;
		Saturday)
		JAVAFIRSTDAY=7;
		DATABASEFIRSTDAY=6;
		break;		
		;;
		Sunday)
		JAVAFIRSTDAY=1;
		DATABASEFIRSTDAY=7;
		break;		
		;;
		*)
		echo "Please enter valid day name(Case sensitive)....Press Enter to continue";
		read _any_;
		continue;
	esac
done
SYBASEDAY=${DATABASEFIRSTDAY}
let LOGAGG=8-${DATABASEFIRSTDAY}
if [ ${DATABASEFIRSTDAY} -eq 1 ]; then
	let LOGAGG=0
fi
if [ ${SYBASEDAY} -eq 7 ]; then
	let SYBASEDAY=0
fi

