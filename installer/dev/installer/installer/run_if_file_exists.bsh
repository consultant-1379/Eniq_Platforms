usage_msg()
{
  echo ""
  echo "Usage: run_if_file_exists.bsh FILE_NAME"
  echo "FILE_NAME  : Name of file to run if it exists"
}

if [ -z "$1" ] ; then
  usage_msg
  exit 1
fi

if [ -f "$1" ] ; then 
	"$1"; 
fi
