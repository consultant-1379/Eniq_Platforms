<project name="sim" default="test_all">
    <property name="module.name" value="sim"/>
    <property file="${user.home}/EniqBuild/BH/build.properties"/>
    <property name="ant.common" value="${cc.base}/tools/ant_common"/>
    <property file="${ant.common}/common.properties"/>
    <property name="module.build" value="${module.sim.build}"/>
    <property name="module.base" value="${module.sim.base}"/>
    <property name="module.dependants" value="${module.sim.dependants}"/>
    <import file="${ant.common}/common.xml"/>
    <property name="tests.to.run" value="**/*Test.class"/>
    <property name="tests.to.exclude" value="**/com/distocraft/dc5000/etl/binaryformatter/*.class, **/com/distocraft/dc5000/etl/sim/MainTest.class"/>

    <path id="sim.lib.classpath">
        <path refid="plaform.lib.classpath"/>
        <path location="${module.common_utilities.pkg}"/>
        <path location="${module.engine.pkg}"/>
        <path location="${module.repository.pkg}"/>
        <path location="${module.alarm_module.pkg}"/>
    </path>
    <path id="sim.test.classpath">
        <path refid="platform.test.classpath"/>
        <path refid="sim.lib.classpath"/>
        <path location="${eniq.plat.base}/adapters/dev/sim/"/>
    </path>
</project>
