<project name="install" basedir="." default="all">

	<property name="dcinstall.require.libs" value="> 5-0-0b5" />
	<property name="dcinstall.require.parser" value="> 5-0-0b212" />

	<target name="install" depends="copyTmpToDeploy">
		<if>
			<available file="${dc.conf.dir}/dtd/MeasDataCollection.dtd" />
			<then>
				<delete file="${dc.conf.dir}/dtd/MeasDataCollection.dtd" />
			</then>
		</if>
		<copy file="${dc.installer.dir}/tmp/dtd/MeasDataCollection.dtd" toFile="${dc.conf.dir}/dtd/MeasDataCollection.dtd" />
		<chmod file="${dc.conf.dir}/dtd/MeasDataCollection.dtd" perm="440" />
		
		<if>
			<available file="${dc.conf.dir}/DYN_CounterList.properties" />
			<then>
				<delete file="${dc.conf.dir}/DYN_CounterList.properties" />
			</then>
		</if>
		<copy file="${dc.installer.dir}/tmp/conf/DYN_CounterList.properties" toFile="${dc.conf.dir}/DYN_CounterList.properties" />
		<chmod file="${dc.conf.dir}/DYN_CounterList.properties" perm="440" />
		
		<if>
			<available file="${dc.conf.dir}/dynmdcmapping.properties" />
			<then>
				<delete file="${dc.conf.dir}/dynmdcmapping.properties" />
			</then>
		</if>
		<copy file="${dc.installer.dir}/tmp/conf/dynmdcmapping.properties" toFile="${dc.conf.dir}/dynmdcmapping.properties" />
		<chmod file="${dc.conf.dir}/dynmdcmapping.properties" perm="440" />
		
		<if>
			<available file="${dc.runtime.dir}/tomcat/webapps/techpackide/lib/MDC_DYN.jar" />
			<then>
				<delete file="${dc.runtime.dir}/tomcat/webapps/techpackide/lib/MDC_DYN.jar" />
				<copy todir="${dc.runtime.dir}/tomcat/webapps/techpackide/lib" flatten="true">
					<fileset dir="${dc.platform.dir}">
						<include name="**/dclib/MDC_DYN.jar" />
					</fileset>
				</copy>
			</then>
			<else />
		</if>
	</target>

	<target name="update" depends="moveToObsolete,install" />

</project>
